{
  "id": "wa_meow",
  "name": "WhatsApp (wa_meow)",
  "version": "0.1.0",
  "description": "WhatsApp channel plugin using Go whatsmeow backend",
  "entry": "dist/index.js",
  "kind": "channel",
  "requiresSetup": true,
  "gatewayMethods": ["web.login.start", "web.login.wait"],
  "channel": {
    "id": "wa_meow",
    "label": "WhatsApp (wa_meow)",
    "selectionLabel": "WhatsApp (wa_meow)",
    "blurb": "Connect WhatsApp via QR code scan",
    "docsPath": "/channels/wa_meow"
  },
  "configSchema": {
    "type": "object",
    "properties": {
      "serverUrl": {
        "type": "string",
        "description": "URL of the wa_meow Go server",
        "default": "http://localhost:8090"
      },
      "accounts": {
        "type": "object",
        "additionalProperties": {
          "type": "object",
          "properties": {
            "userId": {
              "type": "integer",
              "description": "User ID for this WhatsApp account"
            },
            "enabled": {
              "type": "boolean",
              "default": true
            }
          }
        },
        "default": {
          "default": {
            "userId": 1,
            "enabled": true
          }
        }
      }
    }
  },
  "uiHints": {
    "serverUrl": {
      "label": "Server URL",
      "placeholder": "http://localhost:8090"
    },
    "accounts": {
      "label": "WhatsApp Accounts"
    }
  }
}
